    <h2>Cities in Germany</h2>

    <div class="cities-summary">
        <ul class="city-list">
            {{#each cities}}
            <li class="city">
                <h2>{{this.title}}</h2>
                <div class="city-details">
                    <div class="border">
                        <span class="border">
                            <img src="{{this.imageUrl}}" alt="{{this.title}} Image">
                        </span>
                    </div>
                    <p>Rating: {{this.rating}}</p>
                    <p>Season: {{this.season}}</p>
                    <p><a href="/cities/{{this._id}}">More details </a> |  <a href="/cities/{{this._id}}/edit">Edit</a></p>
                    <form action="/cities/{{this._id}}/delete" method="POST">
                        <button>Delete</button>
                    </form>
                </div>
            </li>
            {{/each}}
        </ul>
    </div>
</section>
